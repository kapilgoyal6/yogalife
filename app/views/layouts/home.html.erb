<section class="midCon clearfix">
<aside class="midLeft">

  <%= yield %>

  <div class="clearfix">

    <!-- ┌─────┐ -->
    <!-- │TERMS│ -->
    <!-- └─────┘ -->
    <div class="yogalife">
      <h2>Yogalife</h2>
      <div>
        <%= @cm.find_by_id(8) do |cm| %>
          <%= sanitize(cm.page_content) %>
        <% end %>
      </div>
    </div>

    <!-- ┌────────┐ -->
    <!-- │SITE MAP│ -->
    <!-- └────────┘ -->
    <div class="sitemap clearfix">
      <h2>Sitemap</h2>
      <ul class="sitemapLink">
        <li><a href="/pose/index">POSE</a></li>
        <li><a href="/retreat/index">RETREAT</a></li>
        <li><a href="/events">EVENTS</a></li>
        <li><a href="/nourish/index">NOURISH</a></li>
