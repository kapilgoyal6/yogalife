        <li><a href="/news">News</a></li>
      </ul>
    </div>

  </div>
</aside>

<aside class="midRight">

  <!-- ┌────────────┐ -->
  <!-- │RIGHT BANNER│ -->
  <!-- └────────────┘ -->
  <div class="rightBanner"><%= link_to image_tag(@manage_advertisement.mid_image), @manage_advertisement.mid_url %></div>
  <div class="clr"></div>

  <!-- ┌──────────────┐ -->
  <!-- │EVENT CALENDAR│ -->
  <!-- └──────────────┘ -->
  <%= raw(event_calendar) %>
  <br>
  <br>
  <div class="clr"></div>

  <!-- ┌────────────┐ -->
  <!-- │MOST POPULAR│ -->
  <!-- └────────────┘ -->
  <div class="mostPopCon">
  <h1>Most Popular</h1>
    <div>
      <div class="popularCon" id="mp_1">
        <% @manage_articles.each do |articles| %>
          <div class="popularBox clearfix">
            <div class="lft"><%= link_to image_tag(articles.image, :height => 65, :width => 81), :controller => 'home', :action => 'viewarticle', :id => articles.slug %></div>
            <div class="rgt"><%= link_to articles.title, :controller => 'home', :action => 'viewarticle', :id => articles.slug %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="clr"></div>  

  <!-- ┌──────────┐ -->
  <!-- │NEWSLETTER│ -->
  <!-- └──────────┘ -->
  <div class="botSpace">
    <h1>NEWSLETTER</h1>
    <div>
      <div class="qadTxt">Sign up for our monthly newsletter</div>
      <div class="qadInputBox">
        <%= form_for @subscriber, :remote => true do |f| %>
          <%= f.text_field :email, id: 'newsltr', class: 'qadInput', :value => "Email Address", :onfocus => "clearText(this)", :onblur => "replaceText(this)" %>
          <%= image_submit_tag("", class: 'messageBtn', :onclick => "validate(this);") %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="clr"></div>

  <!-- ┌────────┐ -->
  <!-- │MAGAZINE│ -->
  <!-- └────────┘ -->
  <div class="clearfix">
    <% @manage_magazines.each do |magazine| %>
      <div class="magzineLeft"><%= image_tag(magazine.cover_image, :height => 162, :width => 129) %></div>
      <div class="magzineRight">
        <span class="magzineHd"><%= magazine.title %></span>
        <div class="magzineTxt">
          <%= raw magazine.desc.truncate(50) %>
          <%= link_to 'View Mag', {:controller => 'home', :action => 'viewmagazine', :id => magazine.id}, :class => "menu_fancy viewMag" %>
        </div>
    <% end %>
    </div>
  </div>
  <div class="clr"></div>

  <!-- ┌──────────┐ -->
  <!-- │HOROSCOPES│ -->
  <!-- └──────────┘ -->
  <div class="botSpace">
    <h1>HOROSCOPE</h1>    
    <div class="horoscopeBox">
      <div id="slideshow">
        <div class="horArrow"><a href="javascript:void(0)" id="prev"><img src="images/hor_prev_arrow.gif" alt=""></a> <a href="javascript:void(0)" id="next"><img src="images/hor_next_arrow.gif" alt=""></a></div>
        <ul>
          <% @horoscopes.each do |horos| %>
            <li style="background-image: url(images/horoscope_bg.png); background-color: rgb(255, 255, 255);  overflow: hidden; float: left; width: 210px; height: 263px; background-position: 50% 100%; background-repeat: no-repeat no-repeat;">
              <div class="horHd" style="background:url(<%= (horos.logo.url) -%>) no-repeat 0 0;background-size: 48px 48px;"><%= horos.title %>
                <span>(<%= horos.subtitle %>)</span>
              </div>
              <div class="horDate">
                  <%= horos.start_date.strftime("%B %d") %>-<%= horos.end_date.strftime("%B %d") %>
              </div>
              <div class="horTxt"><%= raw(horos.desc) %></div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="clr"></div>

  <!-- ┌──────────────┐ -->
  <!-- │FOLLOW TWITTER│ -->
  <!-- └──────────────┘ -->
  <div class="twitterCon">
    <h1 class="twitterBird">FOLLOW US ON FOR Mind, Body &amp; SPIRIT UPDATES</h1>
    <ul class="twitterBox">
      <a class="twitter-timeline" href="https://twitter.com/Flexsin_Flex" data-widget-id="438255974235648000">Tweets by @Flexsin_Flex</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </ul>
  </div>
  <div class="clr"></div>


  <!-- ┌─────────┐ -->
  <!-- │FOLLOW US│ -->
  <!-- └─────────┘ -->
  <div class="botSpace">
    <h1>Follow us</h1>
    <div class="followUs">
      <a href="http://www.twitter.com" target="_blank" class="twitter">&nbsp;</a>
      <a href="http://www.facebook.com" target="_blank" class="facebook">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="youtube">&nbsp;</a>
      <a href="http://www.google.com" target="_blank" class="gplus">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="ping">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="vimeo">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="tumbir">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="rss">&nbsp;</a>
      <a href="http://www.youtube.com" target="_blank" class="flickr">&nbsp;</a>
    </div>
  </div>
  <div class="clr"></div>

</aside>
