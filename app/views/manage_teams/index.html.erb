<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Team Members</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Team Members', new_manage_team_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="10%" class="first">S. NO</td>
              <td width="10%">Name</td>
              <td width="10%">Image</td>
              <td width="10%">Position</td>
              <td width="10%">Description</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @manage_teams.each do |manage_team| %>
            <tr class="tableDet">
                <td class="first"><%= manage_team.id %></td>
                <td><%= manage_team.name %></td>
                <td><%= image_tag(manage_team.image, :width => 25) if manage_team.image.present? %></td>
                <td><%= manage_team.position %></td>
                <td><%= manage_team.desc %></td>
                <td><%= manage_team.created_at %></td>
                <td><%= manage_team.updated_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_team %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_team_path(manage_team) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_team, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>