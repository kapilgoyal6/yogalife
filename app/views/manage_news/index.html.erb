<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">News</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add News', new_manage_news_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
            <td width="5%" class="first">S. NO</td>
            <td width="10%">News Title</td>
            <td width="10%">News Image</td>
            <td width="20%">Description</td>
            <td width="10%">Created By</td>
            <td width="10%">Created</td>
            <td width="10%">Updated</td>
            <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
        <% i = 0 %>
          <% @manage_news.each do |manage_news| %>
            <tr class="tableDet">
              <td class="first"><%= i = i + 1 %></td>
              <td><%= manage_news.title.truncate(40) %></td>
              <td><%= image_tag(manage_news.news_image, :width => 25) if manage_news.news_image.present? %></td>
              <td><%= raw manage_news.desc.truncate(140) %></td>
              <td><%= manage_news.created_by %></td>
              <td><%= manage_news.created_at.strftime('%d-%b-%Y') %></td>
              <td><%= manage_news.updated_at.strftime('%d-%b-%Y') %></td>
              <td align="center">
                <%= link_to image_tag("view.gif", :title => "View"), manage_news %>&nbsp;&nbsp;
                <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_news_path(manage_news) %>&nbsp;&nbsp;
                <%= link_to image_tag("delete.png", :title => "Delete"), manage_news, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>