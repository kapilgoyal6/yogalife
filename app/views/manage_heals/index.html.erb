<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Heal</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Heal', new_manage_heal_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="5%" class="first">S. NO</td>
              <td width="10%">Title</td>
              <td width="10%">Image</td>
              <td width="10%">Created By</td>
              <td width="20%">Description</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% i = 0 %>
          <% @manage_heals.each do |manage_heal| %>
            <tr class="tableDet">
                <td class="first"><%= i = i + 1 %></td>
                <td><%= manage_heal.title.truncate(40) %></td>
                <td><%= image_tag(manage_heal.image, :width => 25) if manage_heal.image.present? %></td>
                <td><%= manage_heal.created_by %></td>
                <td><%= raw manage_heal.desc.truncate(140) %></td>
                <td><%= manage_heal.created_at.strftime('%d-%b-%Y') %></td>
                <td><%= manage_heal.updated_at.strftime('%d-%b-%Y') %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_heal %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_heal_path(manage_heal) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_heal, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>