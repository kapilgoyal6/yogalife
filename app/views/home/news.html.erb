<div class="bradcrumb"><a href="home">Home</a><span>News</span></div>
<div>
    <ul class="articleBox">
        <% @news.each do |news| %>
            <li>
                <div class="articleLeft">
                    <%= link_to image_tag(news.news_image, :height => 150), :controller => 'home', :action => 'viewnews', :id => news.slug %>
                </div>
                <div class="articleRight">
                    <div class="hd">
                        <%= link_to news.title, :controller => 'home', :action => 'viewnews', :id => news.slug%>
                    </div>
                    <div class="by">By <%= news.created_by %>&nbsp;&nbsp;<%= news.created_at.strftime("%d %B %Y") %></div>
                    <div><%= truncate(raw(sanitize(news.desc) ), :length => 250 )%></div>
                </div>
                <div class="clr"></div>
            </li>
        <% end %>
    </ul>
</div>