<div class="bradcrumb"><a href="/home">Home</a><span>Article</span></div>
<div>
    <ul class="articleBox">
	    <% @manage_articles.each do |article| %>
    	<li>
            <div class="articleLeft"><%= link_to image_tag(article.image, :height => 150), :controller => 'home', :action => 'viewarticle', :id => article.slug %></div>
            <div class="articleRight">
                <div class="hd"><%= link_to article.title, :controller => 'home', :action => 'viewarticle', :id => article.slug %></div>
                <div class="by">By <%= article.created_by %>&nbsp;&nbsp;<%= article.created_by %></div>
                <div><%= raw article.desc.truncate(200) %></div>
            </div>
            <div class="clr"></div>
        </li>
		<% end %>
	</ul>
</div>