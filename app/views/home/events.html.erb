<div class="bradcrumb"><a href="/home">Home</a><span>Events</span></div>

<div>
    <ul class="articleBox">
        <% @events.each do |event| %>
            <li>
                <div class="articleLeft">
                    <%= link_to image_tag(event.event_image, :height => 150), :controller => 'home', :action => 'eventdetail', :id => event.id %>
                </div>
                <div class="articleRight">
                    <div class="hd"><%= link_to event.name, :controller => 'home', :action => 'eventdetail', :id => event.id %></div>
                    <div class="by"><%= event.event_date %></div>
                    <div><%= event.desc %></div>
                    </div>
                <div class="clr"></div>
            </li>
        <% end %>
    </ul>
</div>

<%= paginate @events%>