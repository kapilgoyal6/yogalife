<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Event</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Event', new_manage_event_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="5%" class="first">S. NO</td>
              <td width="10%">Event Title</td>
              <td width="10%">Event Image</td>
              <td width="20%">Description</td>
              <td width="10%">Author</td>
              <td width="10%">Event Date</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% i = 0 %>
          <% @manage_events.each do |manage_event| %>
            <tr class="tableDet">
                <td class="first"><%= i = i + 1 %></td>
                <td><%= manage_event.name.truncate(40) %></td>
                <td><%= image_tag(manage_event.event_image, :width => 25) if manage_event.event_image.present? %></td>
                <td><%= raw manage_event.desc.truncate(140) %></td>
                <td><%= manage_event.author %></td>
                <td><%= manage_event.start_at %></td>
                <td><%= manage_event.created_at.strftime('%d-%b-%Y') %></td>
                <td><%= manage_event.updated_at.strftime('%d-%b-%Y') %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_event %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_event_path(manage_event) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_event, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>