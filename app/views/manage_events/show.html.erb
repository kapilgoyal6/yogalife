<div id="paged-data-container">
  <div class="tableCon">
      <div class="formHdBox">
        <div class="tableHd">Admin Setting:  <span> </span>View Event</div>
      </div>
      <div class="adminform">
      <div class="left">

        <div class="fldline">
          <div class="label"><b>Event Title:</b></div>
          <div class="fld"><%= @manage_event.name %></div>
          <div class="clr"></div>
        </div>
        
        <div class="fldline">
          <div class="label"><b>Category Name:</b></div>
          <div class="fld"><%= @manage_event.category %></div>
          <div class="clr"></div>
        </div>

        <div class="fldline">
          <div class="label"><b>Event Author:</b></div>
          <div class="fld"><%= @manage_event.author %></div>
          <div class="clr"></div>
        </div>

        <div class="fldline">
          <div class="label"><b>Event Date:</b></div>
          <div class="fld"><%= @manage_event.start_at %></div>
          <div class="clr"></div>
        </div>

        <div class="fldline">
          <div class="label"><b>Event Image:</b></div>
          <div class="fld"><%= image_tag(@manage_event.event_image, :width => 300) if @manage_event.event_image.present? %></div>
          <div class="clr"></div>
        </div>

        <div class="fldline">
          <div class="label"><b>Description:</b></div>
          <div class="fld"><%= @manage_event.desc %></div>
          <div class="clr"></div>
        </div>
                          
      </div>
      
      <div class="clr"></div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_manage_event_path(@manage_event) %> |
<%= link_to 'Back', manage_events_path %>
