<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Banner Listing</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Banner', new_banner_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="10%" class="first">S. NO</td>
              <td width="10%">Banner Image</td>
              <td width="10%">URL</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @banners.each do |banner| %>
            <tr class="tableDet">
                <td class="first"><%= banner.id %></td>
                <td><%= image_tag(banner.image, :height => 25, :width => 25) if banner.image.present? %></td>
                <td><%= banner.url %></td>
                <td><%= banner.created_at %></td>
                <td><%= banner.updated_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), banner %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_banner_path(banner) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), banner, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>