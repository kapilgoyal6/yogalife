<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Sub Category</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Sub Category', new_subcategory_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="10%" class="first">S. NO</td>
              <td width="28%">Category Name</td>
              <td width="10%">Subcategory Name</td>
              <td width="10%">Description</td>
              <!-- <td width="9%">Status</td> -->
              <td width="10%">Created</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @subcategories.each do |subcategory| %>
            <tr class="tableDet">
                <td class="first"><%= subcategory.id %></td>
                <td><%= subcategory.cat_name.truncate(40) %></td>
                <td><%= subcategory.sub_cat_name.truncate(40) %></td>
                <td><%= raw subcategory.desc.truncate(140) %></td>
                <!-- <td>
                  <div id="status13"><a href="#">Active</a></div>
                </td> -->
                <td><%= subcategory.created_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), subcategory %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_subcategory_path(subcategory) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), subcategory, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>