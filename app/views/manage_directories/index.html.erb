<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Business Directory</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Directory', new_manage_directory_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="10%" class="first">S. NO</td>
              <td width="15%">Business Title</td>
              <td width="10%">Subcategory</td>
              <td width="10%">Phone No.</td>
              <td width="10%">Email</td>
              <td width="10%">Created</td>
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @manage_directories.each do |manage_directory| %>
            <tr class="tableDet">
                <td class="first"><%= manage_directory.id %></td>
                <td><%= manage_directory.business_name %></td>
                <td><%= manage_directory.sub_category %></td>
                <td><%= manage_directory.phone_no %></td>
                <td><%= manage_directory.email %></td>
                <td><%= manage_directory.created_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_directory %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_directory_path(manage_directory) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_directory, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>