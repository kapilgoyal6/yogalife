<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Glow</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Glow', new_manage_glow_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="10%" class="first">S. NO</td>
              <td width="15%">Title</td>
              <td width="10%">Image</td>
              <td width="10%">Created By</td>
              <td width="10%">Description</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td> 
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @manage_glows.each do |manage_glow| %>
            <tr class="tableDet">
                <td class="first"><%= manage_glow.id %></td>
                <td><%= manage_glow.title %></td>
                <td><%= image_tag(manage_glow.image, :height => 25, :width => 25) if manage_glow.image.present? %></td>
                <td><%= manage_glow.created_by %></td>
                <td><%= manage_glow.desc %></td>
                <td><%= manage_glow.created_at %></td>
                <td><%= manage_glow.updated_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_glow %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_glow_path(manage_glow) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_glow, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>