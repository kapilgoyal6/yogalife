<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Magazine</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Magazine', new_magazine_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="5%" class="first">S. NO</td>
              <td width="10%">Magazine Name</td>
              <td width="10%">Issue Date</td>
              <td width="20%">Description</td>
              <td width="10%">Image</td>
              <td width="10%">Created</td>
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% @magazines.each do |magazine| %>
            <tr class="tableDet">
                <td class="first"><%= magazine.id %></td>
                <td><%= magazine.title.truncate(40) %></td>
                <td><%= magazine.issue_date %></td>
                <td><%= raw magazine.desc.truncate(150) %></td>
                <td><%= image_tag(magazine.cover_image, :height => 25, :width => 25) if magazine.cover_image.present? %></td>
                <td><%= magazine.created_at %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), magazine %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_magazine_path(magazine) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), magazine, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>