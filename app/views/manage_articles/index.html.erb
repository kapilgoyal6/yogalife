<div id="paged-data-container">
<div class="tableCon">
  <div class="formHdBox">
    <div class="tableHd">Article</div>
    <div class="selectCity"><img src="assets/addnew.png" border="0"><%= link_to 'Add Article', new_manage_article_path %>
    </div>
  </div>
  <div class="paged-data">
    <div class="tabIner">
      <table cellpadding="0" cellspacing="0" width="100%" class="table">
        <thead>
          <tr class="tableHdIner alt-row">
              <td width="5%" class="first">S. NO</td>
              <td width="10%">Title</td>
              <td width="10%">Image</td>
              <td width="10%">Created By</td>
              <td width="20%">Description</td>
              <td width="10%">Created</td>
              <td width="10%">Updated</td>
              <td width="12%">Action</td>
          </tr>
        </thead>
        <tbody>
          <% i = 0 %>
          <% @manage_articles.each do |manage_article| %>
            <tr class="tableDet">
                <td class="first"><%= i = i + 1 %></td>
                <td><%= manage_article.title.truncate(40) %></td>
                <td><%= image_tag(manage_article.image, :width => 25) if manage_article.image.present? %></td>
                <td><%= manage_article.created_by %></td>
                <td><%= raw manage_article.desc.truncate(140) %></td>
                <td><%= manage_article.created_at.strftime('%d-%b-%Y') %></td>
                <td><%= manage_article.updated_at.strftime('%d-%b-%Y') %></td>
                <td align="center">
                  <%= link_to image_tag("view.gif", :title => "View"), manage_article %>&nbsp;&nbsp;
                  <%= link_to image_tag("edit.png", :title => "Edit"), edit_manage_article_path(manage_article) %>&nbsp;&nbsp;
                  <%= link_to image_tag("delete.png", :title => "Delete"), manage_article, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>

          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
</div>